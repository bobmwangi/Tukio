    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_one</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_one</item>
        <item name="actionMenuTextColor">@color/blue_ab_text_color</item>
