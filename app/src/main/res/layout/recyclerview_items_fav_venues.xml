<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <!--id wont be visible-->
    <TextView
        android:id="@+id/tvVID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_gravity="bottom">


        <!-- <ImageView
             android:id="@+id/imgVen"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:adjustViewBounds="true"
             android:padding="5dp"
             android:scaleType="fitCenter"
             android:src="@drawable/fire_white_venue" />
 -->


        <com.thebrownarrow.customfont.CustomFontTextView

            android:id="@+id/tvVName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:padding="10sp"
            android:paddingTop="15dp"

            android:text="kuzima"
            android:textColor="#43b6f4"
            android:textSize="22sp"
            app:custom_typeface="@string/font_segoue_bold" />
        <!-- <ImageView
             android:layout_gravity="center_vertical"
             android:layout_width="20dp"
             android:src="@drawable/ic_action_date_white"
             android:layout_height="20dp" />-->

        <com.thebrownarrow.customfont.CustomFontTextView
            android:id="@+id/tvVLoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvVName"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Lngata way"
            android:textColor="#000"
            android:textSize="18sp"
            app:custom_typeface="@string/font_segoue_reg" />
        <!--    <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:src="@drawable/ic_action_views_white"
                android:layout_height="20dp" />-->

        <Space
            android:id="@+id/sp"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_below="@+id/tvVLoc" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:layout_below="@+id/sp"
            android:background="#000" />

        <Space
            android:id="@+id/sp1"
            android:layout_width="match_parent"
            android:layout_height="6dp"

            android:layout_below="@+id/sp" />
    </RelativeLayout>


</FrameLayout>

