<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp">


    <!--id wont be visible-->
    <TextView
        android:id="@+id/tvVID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_gravity="bottom">


       <!-- <ImageView
            android:id="@+id/imgVen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fire_white_venue" />
-->



        <com.thebrownarrow.customfont.CustomFontTextView
            app:custom_typeface="@string/font_segoue_bold"
            android:id="@+id/tvVName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:padding="10sp"
            android:paddingTop="15dp"
            android:textColor="#43b6f4"
            android:textSize="22sp"/>
        <!-- <ImageView
             android:layout_gravity="center_vertical"
             android:layout_width="20dp"
             android:src="@drawable/ic_action_date_white"
             android:layout_height="20dp" />-->
        <TextView
            android:id="@+id/tvVLoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvVName"

            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_toRightOf="@+id/imgVen"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="18sp" />
        <!--    <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:src="@drawable/ic_action_views_white"
                android:layout_height="20dp" />-->

        <Space
            android:id="@+id/sp"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_below="@+id/tvVLoc" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_below="@+id/sp"
            android:background="#fff" />
        <Space
            android:id="@+id/sp1"
            android:layout_width="match_parent"
            android:layout_height="8dp"

            android:layout_below="@+id/sp" />
    </RelativeLayout>


</FrameLayout>

