<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.thebrownarrow.customfont.CustomFontTextView
        app:custom_typeface="@string/font_segoue_bold"
        android:text="Tukio manager"
              android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text3"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:layout_alignParentTop="true"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />
    <com.thebrownarrow.customfont.CustomFontTextView
        app:custom_typeface="@string/font_segoue_reg"
        android:text="Partnering with us allows you as a club owner or manager to have an account from which you can post unlimited events happening at your club."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:lineSpacingExtra="3dp"
        android:layout_alignParentTop="true"
    android:paddingRight="20dp"
    android:paddingTop="2dp"
    android:paddingLeft="20dp" />
    <com.thebrownarrow.customfont.CustomFontTextView
        app:custom_typeface="@string/font_segoue_reg"
        android:text="You can request to become a manager by writing to us via email."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:lineSpacingExtra="3dp"
        android:layout_alignParentTop="true"
        android:padding="20dp" />

<!--    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/stop"
        android:id="@+id/image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        tools:ignore="ContentDescription,RtlHardcoded" />-->

    <Button
        android:id="@+id/dialogButtonOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Talk to us"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        style="@style/Widget.AppCompat.Button.Colored"
        tools:ignore="RtlHardcoded,RtlSymmetry" />

</LinearLayout>